<%= render :layout => 'layout' do %>
  <%= form_for @client do |f| %>
    <div class="input string email optional">
      <%= f.label :email, "Sign up to be notified when we launch" %>
      <p>
        <%= f.email_field :email %>
        <button type="submit"><%= image_tag 'submit.png' %></button>
      </p>
    </div>
  <% end %>
<% end %>