<!DOCTYPE html>
<%= render '/refinery/html_tag' %>
  <% site_bar = render('/refinery/site_bar', :head => true) -%>
  <%= render '/refinery/head' %>
  <body id="<%= page %>" class="<%= section %>">
    <%= site_bar -%>
    <%= render '/refinery/ie6check' if request.env['HTTP_USER_AGENT'] =~ /MSIE/ -%>
    <div id="page_container">
      <header id="header">
        <%= render '/refinery/header' -%>
      </header>

      <section id="page">
        <%= yield %>
      </section>

      <footer>
        <%= render '/refinery/footer' -%>
      </footer>
    </div>
    <%= javascript_include_tag 'http://cdn.jquerytools.org/1.2.7/full/jquery.tools.min.js' %>
    <%= render '/refinery/javascripts' %>
  </body>

  <!--[if lt IE 9]>
    <script src="http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js"></script>
  <![endif]-->

</html>
