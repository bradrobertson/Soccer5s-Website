<%= simple_form_for(@competition) do |f| %>
  <%= f.input :name, :label => "Your Name", :required => false %>
  <%= f.input :email, :label => "Email Address", :required => false %>
  <%= f.input :telephone, :label => "Telephone number" %>  
  <%= f.input :comments, :as => :text, :label => "Who would be in your ideal mariners 5 a side team?", :error => false %>
  
  <%= f.input :subject, :as => :hidden, :input_html => {:value => 'Mariners Perth Tournament Entry'} %>
  <%= f.input :team_name, :as => :hidden, :input_html => {:value => 'Mariners Perth Tournament Entry'} %>

  <%= f.button :submit, :class => 'submit', :value => "Enter Competition" %>
  <%= f.input :terms, 
    :label => "I accept the #{link_to('terms and conditions', terms_competitions_path, :target => '_blank').html_safe} of the competition", 
    :label_html => {:class => 'terms'} %>
<% end %>
