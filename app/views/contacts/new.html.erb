<% content_for :slogan do %>
  <%= render :partial => '/shared/std_slogan' %>
<% end %>

<% content_for :banner do %>
  <%= render :partial => 'contact_title' %>
<% end %>

<% content_for :sidebar do %>
  <%= render :partial => 'contact_sidebar' %>
<% end %>

<%= render :layout => 'contact' do %>
  <h2>Use the Form Below for Any Enquiries</h2>
  <p>Soccer 5s action is not just limited to adults â€“ we also provide junior 5-a-side football leagues, kids football coaching and football camps as well as fun packed football parties. Speaking of parties, if you need to hire rooms for a private function / party we have fantastic licensed function rooms for use suitable for every occasion so contact your local centre to check availability.</p>

  <%= simple_form_for @contact, :url => contact_path(:anchor => 'form') do |f| %>
    <%= f.input :name, :label => "Your Name <span>(required)</span>".html_safe, :required => false, :error => false %>
    <%= f.input :email, :label => "Email Address <span>(required)</span>".html_safe, :required => false, :error => false %>
    <%= f.input :telephone, :label => "Telephone number <span>(optional)</span>" %>
    <%= f.input :message, :as => :text, :label => "Your Message <span>(optional)</span>".html_safe, :required => false, :error => false %>
    <%= f.button :submit, :class => 'submit', :value => "Submit" %>
  <% end %>
<% end %>