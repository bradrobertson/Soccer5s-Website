<%= render '/shared/banner' %>

<%= body do %>
  <%= main do %>
    <% if nested? %>
      <ul class="tabs">
        <% pages_for_section.each do |page| %>
          <li><%= link_to page.title, refinery.url_for(page.url), class: @page == page ? "current" : "" %></li>
        <% end %>
      </ul>
    <% end %>

    <div class="panes">
      <%= raw @page.content_for(:body) %>

      <% @page.images.each do |image| %>
        <%= link_to image_tag(image.thumbnail("175x120").url), image.thumbnail("900x600").url, class: 'fancybox', rel: 'gallery' %>
      <% end %>
    </div>
  <% end %>

  <%= sidebar do %>
    <%= render 'shared/fb_like_box' %>
  <% end %>
<% end %>